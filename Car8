package sample9;

	class Car8
	{
		public static int sum=0;

		private int num;
		private double gas;

		public Car8() {

			num=0;
			gas=0.0;
			sum++;
			System.out.println("車を製作しました。");
		}
		public void setCar(int n,double g)
		{
			num=n;
			gas=g;

			System.out.println("車のナンバーを"+num+"にガソリン量を"+gas+"に設定しました。");
		}
		public static void showSum()
		{
			System.out.println("車は合計"+sum+"台あります。");
			System.out.println();
		}
		public void show()
		{
			System.out.println("車のナンバーは"+num+"です。");
			System.out.println("ガソリン量は"+gas+"です。");
			System.out.println();
		}

}
