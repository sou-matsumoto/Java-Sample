package sample10;

class Car9
{
	int num;
	double gas;

	public Car9()
	{
		num=0;
		gas=0.0;
		System.out.println("車を作成しました。");
	}
	public void setCar(int n,double g)
	{
		num=n;
		gas=g;
		System.out.println("車のナンバーを"+num+"にガソリン量を"+gas+"に設定しました。");
	}
	public void show()
	{
		System.out.println("車のナンバーは"+num+"です。");
		System.out.println("ガソリン量は"+gas+"です。");
	}

}
